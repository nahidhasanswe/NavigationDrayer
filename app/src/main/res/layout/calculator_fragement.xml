<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/firstname"
        android:background="@drawable/edit_text_style1"
        android:drawableLeft="@drawable/user"
        android:paddingLeft="4dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:textColorHint="#FFFFFF"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text2"
        android:hint="Input First Person Name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="Please input name for calculate love!"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/secondname"
        android:background="@drawable/edit_text_style1"
        android:drawableLeft="@drawable/user"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/firstname"
        android:paddingLeft="4dp"
        android:textColorHint="#FFFFFF"
        android:hint="Input Second Person Name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to"
        android:textSize="32dp"
        android:textColor="#4CAF50"
        android:id="@+id/welcome"
        android:paddingTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Love Calculator"
        android:layout_below="@+id/welcome"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="#F44336"
        android:id="@+id/text"
        android:paddingTop="3dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Calculate"
        android:id="@+id/calculatebutton"
        android:background="@drawable/button_style"
        android:layout_below="@+id/secondname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>